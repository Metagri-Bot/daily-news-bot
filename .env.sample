# === Discord Bot 基本設定 ===
# Discord Developer Portalから取得したBotのトークン
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# ニュースを投稿するDiscordチャンネルのID
NEWS_CHANNEL_ID=YOUR_NEWS_POSTING_CHANNEL_ID_HERE

# === 情報収集用設定 ===
INFO_GATHERING_CHANNEL_ID=YOUR_INFO_GATHERING_CHANNEL_ID_HERE

# === Google Apps Script用設定 ===
# GASをウェブアプリとしてデプロイした際に取得したURL
GOOGLE_APPS_SCRIPT_URL=YOUR_GOOGLE_APPS_SCRIPT_WEB_APP_URL_HERE


# === ロール判定用設定 ===
# サーバーで「開発者モード」をオンにして、各ロールを右クリック→「IDをコピー」で取得
BIGNER_ROLE_ID=YOUR_BIGNER_ROLE_ID_HERE
METAGRI_ROLE_ID=YOUR_METAGRI_ROLE_ID_HERE


# === ニュースソース設定 ===
# 取得したいRSSフィードのURLをカンマ(,)区切りで指定します。
# この値はGitHub ActionsのSecretsで管理することも推奨されます。
NEWS_RSS_FEEDS_AGRICULTURE=https://www.agrinews.co.jp/feed,https://agri.mynavi.jp/feed/
NEWS_RSS_FEEDS_WEB3=https://coinpost.jp/rss,https://news.yahoo.co.jp/rss/media/neweco/all.xml

# === AI活用 ===
OPENAI_API_KEY=your_openai_api_key_here